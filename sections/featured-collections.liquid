<style>
  .section-id-{{ section.id }} {
    background-color: {{ section.settings.background_color }};
  }
  {%- assign background_alpha = section.settings.overlay_background_color | color_extract: 'alpha' -%}
  .section-id-{{ section.id }} .product-block.collection-block .productlabel > span {
    color: {{ section.settings.overlay_text_color }};
    background-color: {% if background_alpha == 0 %}transparent{% else %}{{ section.settings.overlay_background_color | color_modify: 'alpha', 0.8 }}{% endif %};
  }
  .section-id-{{ section.id }} .product-block.collection-block:hover .productlabel > span {
    background-color: {% if background_alpha == 0 %}transparent{% else %}{{ section.settings.overlay_background_color | color_modify: 'alpha', 0.9 }}{% endif %};
  }
</style>

{%- assign bg_alpha = section.settings.background_color | color_extract: 'alpha' -%}
<div class="collection-slider-row {% if section.settings.background_color == settings.bg_col or bg_alpha == 0 %}no-bg{% endif %} for-collections section-id-{{ section.id }}" data-section-type="featured-collections">
  {% unless settings.use_fullwidth_layout %}<div class="container {% unless section.settings.use_carousel %}uncontain-desktop-down{% endunless %}">{% endunless %}
  <div class="collection-slider">
    <h1 class="hometitle h4-style align-center has-paging">
      {% if section.settings.use_carousel %}<a class="prev" href="#">{% include 'svg-chevron-left' %}</a>{% endif %}
      <span>{{ section.settings.title | escape }}</span>
      {% if section.settings.use_carousel %}<a class="next" href="#">{% include 'svg-chevron-right' %}</a>{% endif %}
    </h1>
    <div class="collection-listing overlay-mode-{{ section.settings.overlay_mode }}">
      <div class="product-list {% if section.settings.use_carousel %}carousel {% unless settings.use_fullwidth_layout %}fixed-mode{% endunless %}{% endif %}">
        {% if section.blocks.size > 0 %}

          {% for block in section.blocks %}
            {% assign collection = collections[block.settings.collection] %}

            {% unless collection == blank %}
              {% include 'collection-block', custom_attrs: block.shopify_attributes, manual_image_load: section.settings.use_carousel %}
            {% else %}
              {% include 'onboarding-collection-block' %}
            {% endunless %}
          {% endfor %}

        {% else %}

          {% for i in (1..6) %}
            {% include 'onboarding-collection-block' %}
          {% endfor %}

        {% endif %}
      </div>
    </div>
  </div><!-- /.collection-listing -->
  {% unless settings.use_fullwidth_layout %}</div>{% endunless %}
</div>


{% schema %}
  {
    "name": "Collection list",
    "max_blocks": 20,
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Collection list"
      },
      {
        "type": "checkbox",
        "id": "use_carousel",
        "label": "Enable carousel",
        "default": true
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background color",
        "default": "#f5f5f5"
      },
      {
        "type": "header",
        "content": "Overlay"
      },
      {
        "type": "select",
        "id": "overlay_mode",
        "label": "Position",
        "default": "m",
        "options": [
          {
            "value": "none",
            "label": "Do not show"
          },
          {
            "value": "t",
            "label": "Top"
          },
          {
            "value": "m",
            "label": "Middle"
          },
          {
            "value": "b",
            "label": "Bottom"
          }
        ]
      },
      {
        "type": "checkbox",
        "id": "show_count",
        "label": "Show product count",
        "default": true
      },
      {
        "type": "color",
        "id": "overlay_text_color",
        "label": "Text color",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "overlay_background_color",
        "label": "Background color",
        "default": "#232323"
      }
    ],
    "blocks": [
      {
        "type": "collection",
        "name": "Collection",
        "settings": [
          {
            "type": "collection",
            "id": "collection",
            "label": "Collection"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Collection list",
        "category": "Collection",
        "settings": {
          "title": "Collection list",
          "overlay_mode": "m"
        },
        "blocks": [
        ]
      }
    ]
  }
{% endschema %}
