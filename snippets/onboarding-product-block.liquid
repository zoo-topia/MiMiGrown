<div class="product-block detail-mode-{{ settings.prod_hov_type }} onboarding">
  <div class="block-inner">
    <div class="product-link" href="{{ collection.url }}">

      <div class="image-cont">
        {% capture placeholder_svg_name %}product-{{ forloop.index }}{% endcapture %}
        <div class="placeholder-image">{{ placeholder_svg_name | placeholder_svg_tag }}</div>
      </div>

      <div class="product-info">
        <div class="inner">
          <div class="innerer">
            <div class="title">{{ 'onboarding.product.product_title' | t }}</div>
            <div class="dash">-</div>

            <span class="price">
              {{ 1234 | money }}
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>