@mixin vendor-prefix($name, $argument...) {
  -webkit-#{$name}: #{$argument};
  -ms-#{$name}: #{$argument};
  -moz-#{$name}: #{$argument};
  -o-#{$name}: #{$argument};
  #{$name}: #{$argument};
}

html.template-password {
  height: 100%;

  body {
    height: 100vh;
    font-size: 15px;
    line-height: 1.3em;
    text-align: center;

    background: {{ settings.bg_col }};

    {% if settings.bg_image != blank %}
    background-image: url('{{ settings.bg_image | img_url: '2048x' }}');
    {% endif %}

    {% if settings.bg_method contains 'repeatxy' %}
    background-repeat:repeat;
    {% elsif settings.bg_method contains 'repeatx' %}
    background-repeat:repeat-x;
    {% elsif settings.bg_method contains 'norepeat' %}
    background-repeat:no-repeat;
    {% endif %}
    {% if settings.bg_method contains 'centertop' %}
    background-position:center top;
    {% endif %}
  }
  .password-container {
    display: table;
    height: 100%;
    width: 100%;
  }
  .password-store-name,
  .password-main,
  .password-footer {
    display: table-row;
  }
  .password-store-name-inner,
  .password-main-inner,
  .password-footer-inner {
    display: table-cell;
    padding: 20px;
  }

  .password-store-name { height: 1px; }
  .password-main { height: 100%; }
  .password-main-inner { vertical-align: middle; }
  .password-footer { height: 1px; }

  .password-login-link {
    margin: 20px 0 40px;
    text-align: right;
    svg {
      width: 10px;
      height: 12px;
      margin-right: 4px;
      path {
        @include vendor-prefix(transition, fill 100ms);
      }
    }
    a:hover svg path,
    a:focus svg path {
      fill: {{ settings.font_col_link_hover }};
    }
  }

  h1 {
    font-size: 2em;
    a:hover {
      text-decoration: none;
    }
  }

  h2 {
    font-size: 4em;
  }

  input[type=text], input[type=email], input[type=password] {
    margin: 0 5px 0 0;
    color: #666;
    background: #fff;
    border: 1px solid #ccc;
    vertical-align: top;

    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    border-radius: 3px;
  }
  input[type=submit] {
    display: inline-block;
    background: {{ settings.btn_col }};
    color: {{ settings.btn_col_txt }};
    vertical-align: top;

    margin: 0;
    padding: 4px 14px;
    min-width: 0;

    font-family: Arial, sans-serif;
    font-size: 90%;
    height: 30px;
    cursor: pointer;

    -webkit-border-radius: 4px;
    -moz-border-radius: 4px;
    border-radius: 4px;
  }

  #shoplogo {
    margin: 0 auto;
    .logotext {
      font-size: $larger-text-size;
      line-height: 1em;
    }
  }

  .shopify-name { display: none; }

  .password-message {
    margin-bottom: 2em;
  }

  .password-signup {
    margin-bottom: 4em;
    input[type=email] {
      box-sizing: content-box;
      font-size: 16px;
      line-height: 36px;
      height: 36px;
      padding: 4px 18px;
      margin-right: -1px;
      width: 250px;
      @include vendor-prefix(border-radius, 3px 0 0 3px);
    }
    input[type=submit] {
      box-sizing: content-box;
      font-size: 13px;
      line-height: 36px;
      height: 36px;
      padding: 4px 18px;
      border: 1px solid {{ settings.btn_col }};
      @include vendor-prefix(border-radius, 0 3px 3px 0);
      &:hover {
        background-color: {{ settings.btn_col_alt }};
      }
    }
  }

  @media only screen and (max-width: 420px) {
    .password-signup {
      input[type=email] {
        width: 90%;
      }
      input[type=email],
      input[type=submit] {
        margin: 0 0 10px;
        @include vendor-prefix(border-radius, 3px);
      }
    }
  }

  .password-social {
    li {
      display: inline-block;
      white-space: nowrap;
    }
    a {
      color: #fff;
      margin: 10px;
      display: inline-block;
      padding: 2px 12px 4px 4px;
      -webkit-border-radius: 3px;
      -moz-border-radius: 3px;
      border-radius: 3px;
      span {
        vertical-align: middle;
      }
    }
    a:hover {
      color: #fff;
      opacity: 0.9;
      &, span {
        text-decoration: none;
      }
    }

    a svg {
      display: inline-block;
      vertical-align: middle;
      margin: 0 4px;
      height: 15px;
      width: 15px;
      &, & g {
        fill: #fff;
      }
    }

    .password-social-item-facebook {
      background: #3b5998;
    }
    .password-social-item-twitter {
      background: #00aced;
    }
  }

  .password-footer-inner {
    padding-top: 150px;
    line-height: 2em;
    .powered-by, svg {
      vertical-align: top;
    }
    svg {
      margin: 0 0 0 5px;
      width: 80px;
      height: 23px;
    }
  }

  #password-login {
    width: 300px;
    padding: 1em 0;
    label {
      display: block;
      margin: 0 0 0.5em;
    }
    input[type=password] {
      width: 150px;
    }
    .password-owner {
      margin-top: 2em;
    }
  }
}

